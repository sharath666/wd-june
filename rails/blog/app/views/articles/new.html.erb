<h2> Add article </h2>
<%= form_for @article do |t| %>
<% if @article.errors.any? %>
	<h3> These errors prohibited the form from being saved : </h3>
	<ul>
	<% @article.errors.full_messages.each do |msg| %>
	<li><%= msg %></li>
	<% end %>
</ul>
	<% end %>

	<label> Title: </label><br />
	<%= t.text_field :title, placeholder: "enter the title" %><br /><br />

	<label>Body: </label><br />

	<%= t.text_field :body %><br />

	<label>Published_date : </label><br /> 
	<%= t.date_select :published_date %>
<%= t.label :select_category %><br />
	
<%= t.collection_select :category_ids, Category.all, :id, :name, prompt: "Select Category" %><br /><br />
	<%= t.submit %> Or <%= link_to "back", articles_path %>
	<% end %> 

	