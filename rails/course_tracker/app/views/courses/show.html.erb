<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @course.name %>
</p>

<h2> Students Enrolled </h2>
<ol>
		<% @course.students.each do |student| %>
		<li><%= link_to student.name, student %></li>
		<% end %>
</ol>
<% @course.ratings.each do |rating| %>
<%= rating.rating %>
<% end %>


<%= form_for @rating do |t| %>
<%= t.radio_button :rating, "1" %> 1
<%= t.radio_button :rating, "2" %> 2
<%= t.radio_button :rating, "3" %> 3
<%= t.radio_button :rating, "4" %> 4
<%= t.radio_button :rating, "5" %> 5
<%= t.hidden_field :course_id, value:@course.id %>
<%= t.submit %> 
<% end %>

<%= link_to 'Edit', edit_course_path(@course) %> |
<%= link_to 'Back', courses_path %>
